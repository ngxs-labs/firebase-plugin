{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@ngxs-labs/firestore-plugin": ["packages/firestore-plugin/src/public-api.ts"],
      "@ngxs-labs/firestore-plugin/compat": ["packages/firestore-plugin/compat/public-api.ts"]
    }
  }
}
